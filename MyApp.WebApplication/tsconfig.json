{
  "compilerOptions": {
    "target": "es5",
    "lib": [ "dom", "es6" ],
    "module": "none",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": true,
    "noEmit": false,
    "outFile": "./dist/app.js",
    //"outDir": "./dist/compiled",
    "allowJs": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "compileOnSave": true,
  "include": [ "./app/**/*", "./typewriter/**/*" ]
}